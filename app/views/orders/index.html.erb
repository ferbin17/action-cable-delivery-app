<h4 style="text-align:center; margin: 1% 0;">Orders</h4>
<div id="orders-update-flash"></div>
<div id="orders">
  <% @orders.each do |order| %>
    <% color = cycle("primary", "secondary", "success", "danger", "warning", "info", "dark") %>
    <%= render partial: "order_card", locals: {order: order, user: @current_user, color: color} %>
  <% end %>
</div>