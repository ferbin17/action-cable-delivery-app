<div class="row login-background">
  <div class="col-7 login-field">
  <h2 class="dark-red">LOGIN</h2>
    <%= form_for(@user, url: login_user_index_path) do |f| %>
      <%= render partial: "layouts/error_messages", locals:{object: @user} %>
      <div class="field">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text left-input-group-text">Email :</span>
          </div>
          <%= f.email_field :email_id, autofocus: true, autocomplete: "off", placeholder: "E-mail", required: true, class: "form-control email-shower" %>
          <div class="input-group-append"> </div>
        </div>
      </div>

      <div class="field confirm-password">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text left-input-group-text">Confirm Password :</span>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter Password", required: true, class: "form-control signup-password-field" %>
          <div class="input-group-append">
          </div>
        </div>
      </div>
      <div class="field">
      </div>

      <div class="field field-right">
        <%= f.submit "LOGIN" %>
      </div>
      
      <div class="field field-center signup-link-margin">
        <%= link_to "New to Delivery App? Create an Account", sign_up_user_index_path, class: "light-red bold-text signup-link" %>
      </div>
    <% end %>
  </div>
</div>